<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller="PublicHolidayLocationSelectorController" >
   <!--@description contains list of all locations.-->
    <aura:attribute name="locationList" type="List" default="Object[]"/>
    <!--@description contains boolean attribute to hide or show modals.-->
      <aura:attribute name="showPublicHolidayLocationSelectorModal" type="Boolean" default="false"/>
     <aura:attribute name="showPublicHolidayModal" type="Boolean" default="false"/>
    <!--@description contains location object reference.-->
     <aura:attribute name="LocationObj" type="Object" />
     <!--@description handler of init event.-->
    <aura:handler name="init" action="{!c.init}" value="{!this}"/>
    <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open slds-modal_medium">
            <div class="slds-modal__container">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h3 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Locations</h3>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium " id="modal-content-id-1">
                    <div class="slds-grid slds-gutters slds-wrap">
                        <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2 ">
                            <lightning:select name="select1"   onchange="{!c.onValueChange}" aura:id="Location">
        <option value="">choose one...</option>
                  <aura:iteration items="{!v.locationList}" var="item" >
         <option  value="{!item.Id}">{!item.Name}</option>
    </aura:iteration>                           
    </lightning:select>
                           
                        </div>
                                        
                    </div>                    
                </div>               
                <!--Modal/Popup Box Footer Starts here-->
                
                <footer class="slds-modal__footer">
                    <lightning:button variant="brand"
                                      label="Next"
                                      title="Next"
                                      onclick="{!c.NextClick}"/>
                    <lightning:button variant="neutral"
                                      label="Cancel"
                                      title="Cancel"
                                      onclick="{!c.closeModel}"/>
                </footer>          
            </div>
        </section>
          <div class="slds-backdrop slds-backdrop_open"></div>
     <aura:if isTrue="{!v.showPublicHolidayModal}">
        <c:PublicHolidayModifier  showHolidayLocationSelectorModal="{v.showPublicHolidayLocationSelectorModal}" showHolidayModal="{!v.showPublicHolidayModal}" LocationObj="{!v.LocationObj}"/>        
    </aura:if>
</aura:component>