<apex:page showHeader="false" controller="BookingForm_Controller" lightningStylesheets="true" standardStylesheets="false" docType="html-5.0">
<apex:slds />
    <apex:includeScript value="{!$Resource.jquery}"/>
    <script>
        $(document).ready(function(){
            $('#eventType').on('change', function() {
                //alert(this.value);
                if ( this.value == 'Anand Karaj (Wedding)')
                    {
                    $("#AnandKaraj").show();
                    $("#otherService").hide();
                    }
                if ( this.value == 'Kurmai (Engagement)')
                    {
                    $("#AnandKaraj").hide();
                    $("#otherService").hide();
                    }
                if ( this.value == 'Akhand Paath (3 Day Prayers)')
                    {
                    $("#AnandKaraj").hide();
                    $("#otherService").hide();
                    }
                if ( this.value == 'Sejeh Paath (Custom Length Prayers)')
                    {
                    $("#AnandKaraj").hide();
                    $("#otherService").hide();
                    }
                if ( this.value == 'Sukhmani Sahib Paath (stanzas of 10 hymns)')
                    {
                    $("#AnandKaraj").hide();
                    $("#otherService").hide();
                    }
                if ( this.value == 'Other')
                    {
                    $("#otherService").show();
                    $("#AnandKaraj").hide();
                    }
                if ( this.value == 'None')
                    {
                    $("#otherService").hide();
                    $("#AnandKaraj").hide();
                    }
            });
            $('#courtMarriage').on('change', function() {
                if(this.value == 'No'){
                    $("#courtMarriageRequired").show();
                }
                if(this.value == 'Yes'){
                    $("#courtMarriageRequired").hide();
                }
            });
            $('#prashada').on('change', function() {
                if(this.value == 'Yes'){
                    $("#kitchen").show();
                }
                if(this.value == 'No'){
                    $("#kitchen").hide();
                }
            });
        });
        
        
    </script>

    <div class="slds-page-header">
        <div class="slds-media">
            <div class="slds-media__figure">
                <span class="slds-icon_container slds-icon-standard-opportunity">
                <svg class="slds-icon slds-page-header__icon" aria-hidden="true">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#GurudwaraIcon1.svg" />
                </svg>
                </span>
            </div>
            <div class="slds-media__body">
                <h1 class="slds-page-header__title slds-truncate slds-align-middle" title="Booking Form">Booking Form</h1>
                <p class="slds-text-body_small slds-line-height_reset"><b>Ramgharia Sikh Gurdwara</b></p>
            </div>
        </div>
    </div>
    <br/>
    
    <apex:form styleclass="slds-align_absolute-center"> 
    
